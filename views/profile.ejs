<%- include('partials/header', { title: 'Profile' }) %>
    <%- include('partials/navbar') %>

        <link rel="stylesheet" href="/css/profile.css">

        <section class="profile-section">
            <div class="container">
                <h1>User Profile</h1>
                <div class="profile-info">
                    <form action="/profile" method="POST" enctype="multipart/form-data">
                        <div class="profile-picture">
                            <img src="<%= user.profilePicture || '/assets/images/profile.png' %>" alt="Profile Picture">
                            <input type="file" name="profilePicture" />
                        </div>
                        <div class="profile-details">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="username" value="<%= user.username %>" required>

                            <label for="email">Email:</label>
                            <input type="email" id="email" name="email" value="<%= user.email %>" required>

                            <label for="profile">Profile:</label>
                            <input type="text" id="profile" name="profile" value="<%= user.profile %>" required>

                            <label for="rewardpoints">Reward Points:</label>
                            <input type="number" id="rewardpoints" name="rewardpoints" value="<%= user.rewardpoints %>"
                                disabled>

                            <label for="bio">Bio:</label>
                            <textarea id="bio" name="bio"><%= user.bio || '' %></textarea>

                            <button type="submit" class="btn-primary">Update Profile</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <%- include('partials/footer') %>